# Config stuff
ROOT=@ROOT@
prefix=@prefix@
exec_prefix=@exec_prefix@
LIBDIR=@libdir@/obc
VERSION=@VERSION@
obdb1=@OBDB1@
obxdeb=$LIBDIR/obxdeb
stdlib="-I $LIBDIR"
# End of config

usage () {
    /bin/echo Usage: obdb [-I libdir] ... program args ... >&2
    exit 2
}

incl=
vflag=false
flags=

while [ $# -gt 0 ]; do
    case $1 in
	-I) 	shift; incl="$incl -I $1";;
	-v)	vflag=true;;
	-d)	flags="$flags -d";;
	-*)     usage;;
	*)	break
    esac
    shift
done

if $vflag; then 
    /bin/echo "Oxford Oberon-2 debugger driver version $VERSION"
    $obdb1 -v 
    $obxdeb -v 
    exit
fi

if [ $# -eq 0 ]; then usage; fi

$obdb1 $flags -i $ROOT$obxdeb $incl $stdlib "$@"
